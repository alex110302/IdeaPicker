<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdeaPicker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdeaPicker"
    xmlns:pages="clr-namespace:IdeaPicker.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Picker" Icon="randomize_idea_icon">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Edit Lists" Icon="lists_icon">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:ViewListsPage}"
                Route="ViewListsPage" />
        </Tab>
    </TabBar>

</Shell>
